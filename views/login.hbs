<div class="container-fluid bg-dark m-0" style="height: 100vh">
    <div class="row justify-content-center align-items-center" style="height: 80vh">
        <div class="col-5 text-light">
            <form method="post" action="/login">
                <div>
                    <h1 class="text-center mb-5">INGRESA A TU CUENTA</h1>
                </div>
                <div class="form-group">
                    <label for="username">Nombre de usuario<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="pass">Contraseña<span class="text-danger">*</span></label>
                    <input type="password" class="form-control" name="pass" id="pass">
                </div>
                <p class="text-danger text-center mt-1">{{message}}</p>
                <div class="d-grid gap-2">
                <button type="submit" class="btn btn-secondary mt-2">Iniciar sesión</button>
                </div>
            </form>
        </div>
    </div>
</div>