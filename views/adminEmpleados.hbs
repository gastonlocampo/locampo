<div class="container-fluid bg-dark" style="height: 100vh;">
    <div class="container">
        <a href="/admin" class="btn btn-secondary mt-4 mb-4"> Volver a funciones de ADMIN</a>
        <a href="/admin/empleados/create" class="btn btn-secondary mt-4 mb-4 ms-4"><i class="fas fa-plus-circle"></i> AGREGAR EMPLEADO</a>
        <div class="row d-flex justify-content-center">
            <h1 class="text-center text-light col-5 border border-light pt-1 pb-1 mt-4 mb-5">TODOS LOS EMPLEADOS</h1>
            <table class="table text-light">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Teléfono</th>
                    <th>Dirección</th>
                    <th>Imagen</th> 
                    <th></th>
                    <th></th>
                </tr>
                {{#each empleados}}
                <tr>
                    <td>{{nombre}}</td>
                    <td>{{apellido}}</td>
                    <td>{{telefono}}</td>
                    <td>{{direccion}}</td>
                    <td><img src="/images/{{uuid}}" alt="No hay imagen." style="height : 50px"></td>
                    <td><a href="/admin/empleados/update/{{id}}" class="btn btn-primary"><i class="far fa-edit"></i> EDITAR</a></td>
                    <td><a href="/admin/empleados/delete/{{id}}" class="btn btn-danger"><i class="far fa-trash-alt"></i> ELIMINAR</a></td>
                </tr>
                {{/each}}
            </table>
        </div>
    </div>
</div>